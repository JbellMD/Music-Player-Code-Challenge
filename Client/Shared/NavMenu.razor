@using Microsoft.AspNetCore.Components.Routing
@using MudBlazor

<MudNavMenu Color="Color.Primary" Class="py-2">
    <div class="px-4 py-2">
        <MudText Typo="Typo.overline" Color="Color.Primary" Class="font-semibold">MENU</MudText>
    </div>
    
    <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.LibraryMusic">
        Songs
    </MudNavLink>
    
    <MudNavLink Href="playlists" Icon="@Icons.Material.Filled.QueueMusic">
        Playlists
    </MudNavLink>

    <MudDivider Class="my-2 dark:border-gray-700" />
    
    <div class="px-4 py-2">
        <MudText Typo="Typo.overline" Color="Color.Primary" Class="font-semibold">LIBRARY</MudText>
    </div>

    <MudNavLink Icon="@Icons.Material.Filled.Favorite" Disabled="true">
        Favorites
    </MudNavLink>
    
    <MudNavLink Icon="@Icons.Material.Filled.History" Disabled="true">
        Recently Played
    </MudNavLink>
</MudNavMenu>

<style>
    .mud-nav-link {
        border-radius: 0.5rem;
        margin: 0 0.5rem;
    }
    
    .mud-nav-link:hover {
        background-color: var(--mud-palette-primary-hover);
    }
    
    .mud-nav-link.active {
        background-color: var(--mud-palette-primary-lighten);
    }
    
    .dark .mud-nav-link:hover {
        background-color: rgba(255, 255, 255, 0.05);
    }
    
    .dark .mud-nav-link.active {
        background-color: rgba(255, 255, 255, 0.1);
    }
</style>

