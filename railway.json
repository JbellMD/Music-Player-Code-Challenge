{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfigPath": "nixpacks.toml",
    "buildCommand": "dotnet publish -c Release --runtime linux-x64 --self-contained true"
  },
  "deploy": {
    "startCommand": "./Server/bin/Release/net8.0/linux-x64/publish/music-manager-starter.Server",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE"
  }
}
